@model string

@using (Html.BeginForm("UploadFiles", "Home", FormMethod.Post, new { @class = "main-form", enctype = "multipart/form-data" }))
{
    <div class="div-alltitles">
        <div class="div-title">
            <h1>Rename Your Subtitles</h1>
        </div>
        <div class="div-subtitle">
            <h2>Based on season and episode</h2>
        </div>
    </div>
    <div class="div-allsteps">
        <div class="div-step">
            <label class="step-label">1 - Insert a video name example</label>
        </div>
        <div class="div-input">
            <input class="step-input" type="text" name="videoNameFormatSample" id="videoNameFormatSample" placeholder="(ex: The.Big.Bang.Theory.S04E19.720p.5.1Ch.BluRay)" value="" />
        </div>
        <div class="div-step">
            <label class="step-label">2 - Select your subtitle file(s)</label>
        </div>
        <div class="div-input">
            <input class="step-input" type="file" name="uploadFile" id="uploadFile" placeholder="Select your subtitle file(s) [.srt .zip .rar]" multiple />
        </div>
        <div class="div-step">
            <label class="step-label">3 - Finish</label>
        </div>
        <div class="div-button-start">
            <button class="btn-start" type="submit" id="upload-button">Rename</button>
        </div>
    </div>
}
